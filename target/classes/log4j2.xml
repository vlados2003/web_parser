<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Appenders>
        <!-- Console appender configuration -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd'T'HH:mm:ss.SSSSSSSSS'Z'} {%t} %-5p %c:%L - %m%n"/>
        </Console>

        <!-- File appender configuration-->
        <RollingFile name="File" fileName="/Users/maksim.vlasov/IdeaProjects/web_parser/logs/log.log"
                     filePattern="/Users/maksim.vlasov/IdeaProjects/web_parser/logs/log-%i.log">
        <PatternLayout pattern="%d{yyyy-MM-dd'T'HH:mm:ss.SSSSSSSSS'Z'} {%t} %-5p %c:%L  - %m%n"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="10MB"/>
            </Policies>
            <DefaultRolloverStrategy max="5"/>
        </RollingFile>
    </Appenders>

    <Loggers>
        <!-- Root logger configuration -->
        <Root level="DEBUG">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Root>
    </Loggers>
</Configuration>